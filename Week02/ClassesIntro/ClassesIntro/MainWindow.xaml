<Window x:Class="ClassesIntro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassesIntro"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="700">
    <StackPanel>
        <Image Source="dog.jpg" Width="700" Margin="0,0,-8,0"/>
        <TextBlock><Run Text="Dog Name:"/></TextBlock>
        <TextBox x:Name="DogName"/>
        <Button Click="Bark_Button_Click" Content="Bark"/>
        <Button Click="SayName_Button_Click" Content="Say Name"/>
    </StackPanel>
</Window>
